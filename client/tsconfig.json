{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "rootDir": "./",
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src", "tests", "index.d.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "tests/resolver.js"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
