{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es6"],
        "outDir": "dist",
        "declaration": true,
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": false,
        "rootDir": "./",
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"]
        },
        "typeRoots": ["./src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "files": ["./src/types/index.d.ts"]
}
