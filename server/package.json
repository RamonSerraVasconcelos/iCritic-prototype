{
  "name": "icritic-server",
  "private": true,
  "license": "UNLICENSED",
  "main": "index.js",
  "author": "paulozaneripe <paulozaneripe@hotmail.com>, ramonvasconcelos <rserravasconcelos@gmail.com>",
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsnd --exit-child --quiet -r tsconfig-paths/register ./src/index.ts",
    "debug": "tsnd --exit-child --quiet --inspect -r tsconfig-paths/register ./src/index.ts",
    "build": "rm -rf dist && tsc",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/src/index.js",
    "lint": "npx eslint ./",
    "migrate:start": "node ./node_modules/.bin/prisma migrate deploy && yarn start",
    "migrate:windows": "dotenv -e ../.env npx prisma migrate dev --schema='./server/prisma/schema.prisma",
    "migrate:test": "dotenv -e ../.env.test -- npx prisma migrate reset --force",
    "test": "dotenv -e  ../.env.test jest --runInBand -i",
    "coverage": "jest --runInBand --coverage --coverageReporters='text-summary'",
    "generate": "node ./node_modules/.bin/prisma generate --schema='./prisma/schema.prisma'"
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.7.8",
    "path": "^0.12.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.10",
    "@types/nodemailer": "^6.4.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.3.1",
    "prettier": "^2.6.2",
    "prisma": "^4.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3"
  }
}
